<?xml version='1.0' encoding='utf-8'?>
<widget id="com.itdsc.mymdohs" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>myMDOHS</name>
    <description>
        ITDSC, ITDTE, Bangladesh Army
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Tanvir Shaikat
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="750"/>
    <preference name="SplashScreenBackgroundColor" value="#ffffff"/>
    <icon src="icon.png" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="screen/android/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="screen/android/splash-port-ldpi.png" density="port-ldpi"/>
        <splash src="screen/android/splash-port-mdpi.png" density="port-mdpi"/>
        <splash src="screen/android/splash-port-xhdpi.png" density="port-xhdpi"/>
        <splash src="screen/android/splash-port-xxhdpi.png" density="port-xxhdpi"/>
        <splash src="screen/android/splash-port-xxxhdpi.png" density="port-xxxhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
